<path-queries>

<query name="experimentsForGene" model="genomic" view="MicroArrayExperiment">
  <node path="MicroArrayExperiment" type="MicroArrayExperiment">
  </node>
  <node path="MicroArrayExperiment.results" type="MicroArrayResult">
  </node>
  <node path="MicroArrayExperiment.results.genes" type="Gene">
  </node>
  <node path="MicroArrayExperiment.results.genes.identifier" type="String">
    <constraint op="=" value="" description="" identifier="" code="A">
    </constraint>
  </node>
</query>

<!-- Given gene and experiment ids, return results -->
<query name="resultsForGeneAndExperiment" model="genomic" view="Gene.microArrayResults" constraintLogic="A and B">
  <node path="Gene" type="Gene">
  </node>
  <node path="Gene.microArrayResults" type="MicroArrayResult">
  </node>
  <node path="Gene.microArrayResults.experiment" type="MicroArrayExperiment">
  </node>
  <node path="Gene.microArrayResults.experiment.identifier" type="String">
    <constraint op="=" value="abc" description="" identifier="" code="A">
    </constraint>
  </node>
  <node path="Gene.identifier" type="String">
    <constraint op="=" value="abc" description="" identifier="" code="B">
    </constraint>
  </node>
</query>

</path-queries>